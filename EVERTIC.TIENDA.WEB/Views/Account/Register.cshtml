@model EVERTEC.TIENDA.WEB.Models.RegisterViewModel

<div class="content-heading">
    <div>
        Crear nuevo usuario.
        <small>Formulario para crear un nuevo usuario del sistema.</small>
    </div>
</div>

<div class="card  block-center mt-4 wd-xl card-sigma">
    <di class="card card-flat">

        <div class=" card-body">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new { @class = "text-danger" })

                <div class="form-group">
                    <div class=" input-group with-focus">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control border-right-0", placeholder = "Email" })
                        <div class="input-group-append">
                            <span class="input-group-text text-muted bg-transparent border-left-0">
                                <em class="fa fa-envelope"></em>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class=" input-group with-focus">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control border-right-0", placeholder = "Nombres y Apellidos" })
                        <div class="input-group-append">
                            <span class="input-group-text text-muted bg-transparent border-left-0">
                                <em class="fa fa-user"></em>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class=" input-group with-focus">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control border-right-0", placeholder = "Password" })
                        <div class="input-group-append">
                            <span class="input-group-text text-muted bg-transparent border-left-0">
                                <em class="fa fa-lock"></em>
                            </span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class=" input-group with-focus">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control border-right-0", placeholder = "Confirmar Password" })
                        <div class="input-group-append">
                            <span class="input-group-text text-muted bg-transparent border-left-0">
                                <em class="fa fa-lock"></em>
                            </span>
                        </div>
                    </div>
                </div>

                <button class="btn btn-block btn-primary mt-3" type="submit">Crear</button>
            }
        </div>
    </di>

</div>
@section Scripts {

}